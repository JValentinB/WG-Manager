module styles

import src/utils/dom
import src/utils/misc

val darkGrey = "rgb(8, 12, 17)"
val lightGrey = "rgb(16, 24, 34)"


def styles(id: String): String = {
  id match {
    case "body" => """
      display: flex;
      justify-content: center;
      align-items: center;
      font-family: sans-serif;
      background:""" ++ darkGrey ++ """;
    """
    case "app" => """
      display: flex;
      width: 100%;
      height: 100%;
      max-width: 800px;
      color: white;
      background: """ ++ darkGrey ++ """;
    """
    case "appContainer" => """
      display: flex;
      flex-direction: column;
      align-items: stretch;
      width: 100%;
      height: 100%;
      color: white;
      background: """ ++ lightGrey ++ """;
    """
    case "addButton" => """
      width: 100%;
      height: 50px;
      background-color: transparent;
      display: block;
      justify-content: center;
      align-items: center;
      border: 3px dashed #ccc;
      font-size: 30px;
      color: #ccc;
      cursor: pointer;
    """
    case "addMenu" => """
      display: none;
      justify-content: center;
      align-items: center;
      width: 100%;
      height: 100%;
    """
    case "addContainer" => """
      display: flex;
      justify-content: center;
      align-items: center;
      width: 100%;
      height: 100%;
      border-top: 5px solid """ ++ darkGrey ++ """;
    """
    case "button" => """
      height: 50px;
      background-color: transparent;
      display: flex;
      justify-content: center;
      align-items: center;
      border: 1px solid #ccc;
      font-size: 30px;
      color: #ccc;
      cursor: pointer;
    """
    case "groupButton" => """
      flex-grow: 1;
      height: 50px;
      background-color: transparent;
      display: flex;
      justify-content: center;
      align-items: center;
      border: 1px solid #ccc;
      font-size: 30px;
      color: #ccc;
      cursor: pointer;
    """
    case "buttonGroup" => """
      display: flex;
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
      width: 100%;
      height: 100%;
    """
    case "textInput" => """
      width: 90%;
      height: 50px;
      padding: 0;
      padding-left: 5%;
      padding-right: 5%;
      background-color: white;
      display: block;
      justify-content: center;
      align-items: center;
      border: None;
      border-top: 5px solid """ ++ darkGrey ++ """;
      border-bottom: 5px solid """ ++ darkGrey ++ """;
      font-size: 30px;
      color: black;
    """
    case "wrapper" => """
      display: block; 
      position: relative;
      width: 100%;
      height: 100%;
    """
    case "divider" => """
      display: block;
      width: 100%;
      height: 5px;
      background-color: """ ++ darkGrey ++ """;
    """
    case _ => {
      consoleLog("unknown id: " ++ id)
      ""
    }
  }
}

