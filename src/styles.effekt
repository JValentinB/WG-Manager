def styleCard(color: String, scale: Double): String = {
  val width = (250.0 * scale).toInt
  val height = (250.0 * scale).toInt

  var outline = 4
  if (scale > 1.0) {
    outline = 10
  }
  """
    display: flex;
    position: relative;
    transform-style: preserve-3d;
    justify-content: center;
    align-items: center;
    width: """ ++ show(width) ++ """px;
    height: """ ++ show(height) ++ """px;
    margin: 20px;

    background-color: """ ++ color ++ """;
    border-radius: 15px;
    outline: """ ++ show(outline) ++ """px solid """ ++ color ++ """;
    font-size: 50px;
    flex-shrink: 0;
    cursor: pointer;
  """
}

def styleApp(): String = {
  val windowWidth = getWindowWidth()
  """
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100%;
    max-width: """ ++ show(windowWidth) ++ """px;
    background: """ ++ darkGrey ++ """;
  """
}