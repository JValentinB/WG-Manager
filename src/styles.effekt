  id match {
    case "navBar" => """
      display: block; 
      width: 100%;
      height: 60px;
      background: """ ++ lightGrey ++ """;
      color: white;
      border-bottom: 5px solid """ ++ darkGrey ++ """;
    """
    case "navButton" => """
      position: relative;
      left: 0px;
      width: 33.33%;
      height: 100%;
      background: transparent;
      border: none;
      padding: 0;
      color: white;
      cursor: pointer;
      font-size: 1rem;
    """
    case "navButtonActive" => """
      position: relative;
      left: 0px;
      width: 33.33%;
      height: 100%;
      background: transparent;
      border: none;
      border-top: 3px solid white;
      padding: 0;
      color: white;
      cursor: pointer;
