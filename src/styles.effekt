def stylesSection(id: String): String = {
  id match {
    // only containing cards
    case "cardsContainer" => """
      display: flex;
      flex-direction: row;
      flex-wrap: nowrap;
      justify-content: flex-start; 
      align-items: center;
      gap: 20px;
      width: 100%;
      height: 190px;
      overflow-y: hidden;
      overflow-x: auto;
    """
    // containing cards and title
    case "entryContainer" => """
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      align-items: center;
      width: 100%;
      height: 100%;
      border-top: 5px solid """ ++ darkGrey ++ """;
      border-bottom: 5px solid """ ++ darkGrey ++ """;
    """
    // containing all entries
    case "listContainer" => """
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      align-items: center;
      width: 100%;
      height: 100%;
    """
    case "title" => """
      display: flex;
      width: 100%;
      height: 35px;
      background-color: transparent;
      justify-content: center;
      align-items: center;
      text-align: center;
      font-size: 20px;
      color: #ccc;
    """
    case "editMenu" => """
      display: none;
      flex-direction: column;
      justify-content: space-between;
      align-items: center;
      width: 100%;
      height: 100%;
    """
    case _ => {
      consoleLog("unknown id: " ++ id)
      ""
    }
  }
}

def styleCard(color: String, scale: Double): String = {
  val width = (125.0 * scale).toInt
  val height = (150.0 * scale).toInt

  var border = "border: None;"
  if (scale > 1.0) {
    border = "border: 2px solid white;"
  }
  """
    width: """ ++ show(width) ++ """px;
    height: """ ++ show(height) ++ """px;
    background-color: """ ++ color ++ """;
    margin: 10px;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 5px;
    font-size: 25px;
    flex-shrink: 0;
    cursor: pointer;
  """ ++ border
}

def styleApp(): String = {
  val windowWidth = getWindowWidth()
  """
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100%;
    max-width: """ ++ show(windowWidth) ++ """px;
    background: """ ++ darkGrey ++ """;
  """
}