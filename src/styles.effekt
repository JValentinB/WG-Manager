def stylesNavBar(id: String): String = {
  val color = colorPalette()
  id match {
    case "navBar" => """
      display: block; 
      width: 100%;
      height: 100px;
      background: """ ++ lightGrey ++ """;
      color: white;
      border-bottom: 5px solid """ ++ darkGrey ++ """;
    """
    case "navButtonInactive" => """
      position: relative;
